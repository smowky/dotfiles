# Auth with polkit-gnome:
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Desktop notifications
exec mako

# Network Applet
exec nm-applet --indicator

# clipboard manager
exec wl-paste --watch cliphist store
     
# Welcome App
exec dex -a -s /etc/xdg/autostart/:~/.config/autostart/

# Sway Fader
# exec python3 ~/.config/sway/scripts/swayfader.py

# Dynamic display onfigurator
exec kanshi

# Start tasks manager planify directly to scratchpad
exec planify
for_window [app_id="io.github.alainm23.planify"] move to scratchpad

# Start obsidian directly to scratchpad
exec obsidian
for_window [class="obsidian"] move to scratchpad

